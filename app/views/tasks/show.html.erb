<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<br>
<%= link_to "Update #{@task.title}",
            edit_task_path(@task) %>
<br>
<%= link_to "Return", tasks_path(@task) %>
